<% content_for :effective_mercury_javascripts do %>
  <script type='text/javascript'>
    jQuery(window).bind('mercury:ready', function() {
      Mercury.Snippet.load({
        <% @page.snippets.each do |snippet, vals| %>
          <%= snippet %>: <%= vals.to_json.html_safe %>,
        <% end %>
      });
    });
  </script>
<% end %>
